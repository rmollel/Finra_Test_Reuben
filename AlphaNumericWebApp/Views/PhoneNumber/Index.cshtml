
@model AlphaNumericWebApp.Models.PhoneNumberViewModel

@{
    ViewData["Title"] = "INPUT PAGE";
}



<div class="row" id="introDiv">
    <p>Please use the form below to enter <span style="text-decoration: underline"><strong>valid USA</strong></span> phone number.</p>
</div>

<div class="row">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="col-md-12">
        <form asp-action="GenerateCombinations" class="form-horizontal">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Phone number</label>
                <div class="col-sm-10">
                    <input asp-for="OriginalPhoneNumber" class="form-control" id="inptOriginalPhoneNumber" placeholder="Example. 240 386 6106" />
                    @*<span asp-validation-for="OriginalPhoneNumber" class="text-danger"></span>*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary btn-lg">Generate Alpha-numerics</button>
                </div>
            </div>
        </form>
    </div>
</div>